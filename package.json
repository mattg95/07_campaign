{
  "name": "example-create-react-app-express",
  "version": "1.0.0",
  "main": "server.js",
  "start": "node server.js",
  "heroku-postbuild": "cd react-app && npm install --only=dev --no-shrinkwrap && npm run build",
  "nodemonConfig": {
    "ignore": [
      "tests/exampleResponses/*"
    ]
  },
  "scripts": {
    "install": "cd react-app && npm install",
    "start": "cd react-app && npm start",
    "build": "cd react-app && npm run build",
    "react-test": "cd react-app && npm run test",
    "react-eject": "cd react-app && npm run eject",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run react-start\"",
    "test": "mocha --timeout 50000 tests/puppeteer/bootstrap.js --recursive tests",
    "test-email": "npm test -- --grep generateEmail",
    "test-postcode": "npm test -- --grep /api/postcode"
  },
  "dependencies": {
    "@reach/router": "^1.3.4",
    "axios": "^0.21.1",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "http-proxy-middleware": "^1.0.6",
    "mocha": "^8.2.1",
    "puppeteer": "^5.5.0",
    "react-gtm-module": "^2.0.11",
    "react-https-redirect": "^1.1.0",
    "reactjs-popup": "^2.0.4",
    "socket.io": "^3.0.5",
    "socket.io-client": "^3.0.5"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "nodemon": "^2.0.7"
  }
}
